<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <Powerflow>
    <networkConfiguration> pti08.raw </networkConfiguration>
    <networkUnpartitionedGraph>pti08_network.dot</networkUnpartitionedGraph>
    <networkPartitionedGraph>pti08x_partitioned_network.dot</networkPartitionedGraph>
    <!--
    <LinearSolver>
      <PETScPrefix>nrs</PETScPrefix>
      <PETScOptions>
        -ksp_type preonly
        -pc_type lu
        -ksp_monitor
        -ksp_max_it 1
        -ksp_view
      </PETScOptions>
    </LinearSolver> 
    -->
    <LinearSolver>
      <SolutionTolerance>1.0e-15</SolutionTolerance>
      <RelativeTolerance>1.0e-10</RelativeTolerance>
      <MaxIterations>10000</MaxIterations>
      <PETScPrefix>nrs</PETScPrefix>
      <PETScOptions>
        -ksp_type bicg
        -pc_type bjacobi
        -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
        -ksp_monitor
        -ksp_view
      </PETScOptions>
    </LinearSolver>
    <!-- 
         If UseNewton is true a NewtonRaphsonSolver is
         used. Otherwise, a PETSc-based NonlinearSolver is
         used. Configuration parameters for both are included here. 
    -->
    <UseNewton>false</UseNewton>
    <NewtonRaphsonSolver>
      <SolutionTolerance>1.0E-05</SolutionTolerance>
      <MaxIterations>50</MaxIterations>
      <LinearSolver>
        <SolutionTolerance>1.0E-10</SolutionTolerance>
        <RelativeTolerance>1.0e-05</RelativeTolerance>
        <MaxIterations>10000</MaxIterations>
        <PETScOptions>
          -ksp_type bicg
          -pc_type bjacobi
          -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
          -ksp_monitor
          -ksp_view
        </PETScOptions>
      </LinearSolver>
    </NewtonRaphsonSolver>
    <NonlinearSolver> 
      <SolutionTolerance>1.0E-05</SolutionTolerance>
      <FunctionTolerance>1.0E-10</FunctionTolerance>
      <MaxIterations>50</MaxIterations>
      <PETScOptions>
        -snes_monitor
        -snes_linesearch_type basic
        -ksp_type bicg
        -pc_type bjacobi
        -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
        -ksp_atol 1.0e-10
        -ksp_rtol 1.0e-05
        -ksp_monitor
        -ksp_max_it 1000
      </PETScOptions>
    </NonlinearSolver>
  </Powerflow>
</Configuration>
