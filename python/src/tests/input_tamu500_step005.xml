<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <Powerflow>
    <networkConfiguration> ACTIVSg500_rmsmallgen_pslfv23.raw </networkConfiguration>
    <maxIteration>20</maxIteration>
    <tolerance>1.0e-8</tolerance>
    <qLimit>True</qLimit>
    <LinearSolver>
      <SolutionTolerance>1.0E-11 </SolutionTolerance> 
      <PETScOptions>
        <!-- -ksp_view -->
        -ksp_type richardson
        -pc_type lu
        -pc_factor_mat_solver_type petsc
        -ksp_max_it 1
      </PETScOptions>
    </LinearSolver>
    <!-- 
                  If UseNewton is true a NewtonRaphsonSolver is
         used. Otherwise, a PETSc-based NonlinearSolver is
         used. Configuration parameters for both are included here. 
    -->
    <UseNonLinear>false</UseNonLinear>
    <UseNewton>false</UseNewton>
    <NewtonRaphsonSolver>
      <SolutionTolerance>1.0E-05</SolutionTolerance>
      <FunctionTolerance>1.0E-05</FunctionTolerance>
      <MaxIterations>20</MaxIterations>
      <LinearSolver>
        <SolutionTolerance>1.0E-08</SolutionTolerance>
        <MaxIterations>50</MaxIterations>
        <PETScOptions>
          -ksp_type bicg
          -pc_type bjacobi
          -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly
          <!-- -ksp_monitor
          -ksp_view -->
        </PETScOptions>
      </LinearSolver>
    </NewtonRaphsonSolver>
    <NonlinearSolver>
      <SolutionTolerance>1.0E-05</SolutionTolerance>
      <FunctionTolerance>1.0E-05</FunctionTolerance>
      <MaxIterations>50</MaxIterations>
      <PETScOptions>
        -ksp_type bicg
        -pc_type bjacobi
        -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly
        <!-- -snes_view
        -snes_monitor
        -ksp_monitor
        -ksp_view -->
      </PETScOptions>
    </NonlinearSolver>
  </Powerflow>
  <Dynamic_simulation>
    <!--<networkConfiguration> IEEE3G9B_V23.raw </networkConfiguration>-->
    <generatorParameters> tamu_500bus_detail.dyr </generatorParameters>
    <!--generatorParameters> classical_model_0Imp_Out333.dyr  </generatorParameters-->                 
    <simulationTime>20</simulationTime>
    <timeStep>0.005</timeStep>
    <faultEvents>
      <faultEvent>
        <beginFault> 5.0</beginFault>
        <endFault>   5.1</endFault>
        <faultBranch>7 262</faultBranch>
        <timeStep>   0.005</timeStep>
      </faultEvent>
    </faultEvents>
    <observations>
      <observation> 
        <type> generator </type>
        <busID> 9 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> generator </type>
        <busID> 16 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> generator </type>
        <busID> 82 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> generator </type>
        <busID> 127 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
       <type> generator </type>
       <busID> 389 </busID>
       <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> generator </type>
        <busID> 438 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> generator </type>
        <busID> 497 </busID>
        <generatorID> 1 </generatorID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 7 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 262 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 265 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 232 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 9 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 82 </busID>
      </observation>
        <observation> 
        <type> bus </type>
        <busID> 127 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 389 </busID>
      </observation>
        <observation> 
        <type> bus </type>
        <busID> 438 </busID>
      </observation>
      <observation> 
        <type> bus </type>
        <busID> 497 </busID>
      </observation>
    </observations>
    <generatorWatch>
      <generator>
       <busID> 9 </busID>
       <generatorID> 1 </generatorID>
      </generator>
    </generatorWatch>
    <generatorWatchFrequency> 1 </generatorWatchFrequency>
    <generatorWatchFileName> 00tamu500_detail.csv </generatorWatchFileName>
    <LinearSolver>
      <SolutionTolerance>1.0E-12 </SolutionTolerance> 
      <ForceSerial>true</ForceSerial>
      <InitialGuessZero>true</InitialGuessZero>
      <SerialMatrixConstant>true</SerialMatrixConstant>
      <PETScOptions>
        <!--
                     -ksp_type richardson
        -->
        -ksp_type preonly
        -pc_type lu
        -pc_factor_mat_solver_type petsc
        -pc_factor_mat_ordering_type amd
      </PETScOptions>
    </LinearSolver>
    <LinearMatrixSolver>
      <!--
        These options are used if SuperLU was built into PETSc 
      -->
      <Ordering>nd</Ordering>
      <Package>petsc</Package>
      <Iterations>1</Iterations>
      <Fill>5</Fill>
      <!--<PETScOptions>
        These options are used for the LinearSolver if SuperLU is not available
        -ksp_atol 1.0e-18
        -ksp_rtol 1.0e-10
        -ksp_monitor
        -ksp_max_it 200
        -ksp_view
      </PETScOptions>
      -->
    </LinearMatrixSolver>
  </Dynamic_simulation>
</Configuration>
